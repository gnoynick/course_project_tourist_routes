<Page x:Class="course_project_tourist_routes.AdminPages.UsersPage"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:local="clr-namespace:course_project_tourist_routes.AdminPages"
          xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
          mc:Ignorable="d" 
          d:DesignHeight="700" d:DesignWidth="1300"
          Title="Пользователи">
    <Grid>
        <Border Background="#D1E2C4" CornerRadius="10" Margin="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#4A773C" CornerRadius="10" Margin="10,10,10,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BackButton" 
                                    Style="{StaticResource ExitAndSettingsButtonStyle}" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Width="60"
                                    Height="60" 
                                    Click="BackButton_Click">
                            <materialDesign:PackIcon Kind="ArrowLeftBold" 
                                                      Foreground="#F0FFF0"
                                                      Width="40"
                                                      Height="40"/>
                        </Button>

                        <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                       Foreground="#F0FFF0" 
                                                       Width="32"
                                                       Height="37"
                                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Управление пользователями" 
                                           Foreground="#F0FFF0" 
                                           FontSize="28" 
                                           FontWeight="Bold"/>
                        </StackPanel>

                        <Button x:Name="AddAdminButton"
                                    Grid.Column="2"
                                    Style="{StaticResource ButtonStyle}"
                                    Width="200"
                                    Height="40"
                                    Margin="10,0,0,0"
                                    Click="AddAdminButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountPlus" 
                                                          Width="20"
                                                          Height="20"
                                                          Margin="0,0,5,0"
                                                          Foreground="White"/>
                                <TextBlock Text="Добавить админа" 
                                               Foreground="White"
                                               FontSize="16"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <Border Grid.Row="1" CornerRadius="10" Margin="10,10,10,0" Padding="10">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Magnify" 
                                                         Foreground="#4A773C"
                                                         Width="24"
                                                         Height="24"
                                                         Margin="0,0,5,0"
                                                         VerticalAlignment="Center"/>
                            <TextBlock Text="Поиск"
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#4A773C"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                        </StackPanel>
                        <TextBox x:Name="SearchTextBox" 
                                     Width="250"
                                    TextAlignment="Center"
                                     Style="{StaticResource StyledTextBox}"
                                     Margin="0,5,10,0"
                                     Tag="Поиск по логину или email..."
                                     TextChanged="SearchTextBox_TextChanged">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                        <Grid>
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                            <materialDesign:PackIcon Kind="Magnify" 
                                                                                       HorizontalAlignment="Left" 
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="10,0,0,0"
                                                                                       Foreground="#4A773C"/>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <ComboBox x:Name="RoleComboBox"
                                      Style="{StaticResource StyledComboBox}"
                                      Width="200"
                                      Margin="0,5,10,0"
                                      SelectionChanged="RoleComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountTie" 
                                                                   Width="20"
                                                                   Height="20"
                                                                   Margin="0,0,5,0"
                                                                   Foreground="#4A773C"/>
                                        <TextBlock Text="{Binding NameRole}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <ComboBox x:Name="StatusComboBox"
                                      Style="{StaticResource StyledComboBox}"
                                      Width="200"
                                      Margin="0,5,10,0"
                                      SelectionChanged="StatusComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountCheck" 
                                                                   Width="20"
                                                                   Height="20"
                                                                   Margin="0,0,5,0"
                                                                   Foreground="#4A773C"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button x:Name="ResetFiltersButton"
                                    Style="{StaticResource ButtonStyle}"
                                    Width="40"
                                    Height="40"
                                    Margin="0,5,0,0"
                                    Click="ResetFiltersButton_Click"
                                    ToolTip="Сбросить фильтры">
                            <materialDesign:PackIcon Kind="FilterRemove" 
                                                      Width="20" 
                                                      Height="20" 
                                                      Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Border>

                <Grid Grid.Row="2" x:Name="LoadingGrid" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Идёт загрузка пользователей..." 
                   Foreground="#4A773C"
                   FontSize="30"
                   HorizontalAlignment="Center"/>
                        <ProgressBar Width="420" 
                     Height="15"
                     IsIndeterminate="True"
                     Foreground="#4A773C"
                     Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>

                <Border x:Name="UsersListViewBorder" Visibility="Collapsed" Grid.Row="2" CornerRadius="10" Background="White" Margin="10" Padding="10">
                    <ListView x:Name="UsersListView" 
                                  ScrollViewer.CanContentScroll="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.IsDeferredScrollingEnabled="False"
                                  Style="{StaticResource ListViewStyle}"
                                  ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                  BorderThickness="0" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource RouteCardStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Width="60" Height="60" Margin="10">
                                            <Button x:Name="UserPhotoButton" 
                                                       Width="60" Height="60" 
                                                       Background="{Binding ProfilePhotoBrush}"
                                                       BorderBrush="Transparent"
                                                       BorderThickness="0"
                                                       Click="UserPhotoButton_Click"/>
                                        </Grid>

                                        <StackPanel Grid.Column="1" Margin="10">
                                            <TextBlock Text="{Binding UserName}" 
                                                       FontSize="14" 
                                                       FontWeight="Bold" 
                                                       Style="{StaticResource RouteTextStyle}"/>
                                            <TextBlock Text="{Binding Email}" 
                                                       Style="{StaticResource RouteTextStyle}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <materialDesign:PackIcon Kind="Account" 
                                                                             Width="12"
                                                                             Height="12"
                                                                             Margin="0,0,3,0"
                                                                             Foreground="#8B7962"/>
                                                <TextBlock Text="{Binding Roles.NameRole}" 
                                                           FontStyle="Italic" 
                                                           FontSize="11"
                                                           Foreground="#8B7962"/>
                                                <materialDesign:PackIcon Kind="Calendar" 
                                                                             Width="12"
                                                                             Height="12"
                                                                             Margin="10,0,3,0"
                                                                             Foreground="#8B7962"/>
                                                <TextBlock Text="{Binding DateAddedUser, StringFormat='dd.MM.yyyy'}" 
                                                           FontStyle="Italic" 
                                                           FontSize="11"
                                                           Foreground="#8B7962"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <materialDesign:PackIcon Kind="AccountLock" 
                                                                             Width="12"
                                                                             Height="12"
                                                                             Margin="0,0,3,0"
                                                                             Foreground="#8B7962"/>
                                                <TextBlock Text="{Binding AccountStatus}" 
                                                           FontStyle="Italic" 
                                                           FontSize="11"
                                                           Foreground="#8B7962"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" 
                                                    Orientation="Horizontal" 
                                                    VerticalAlignment="Center" 
                                                    Margin="10">
                                            <Button x:Name="ToggleStatusButton"
                                                    Style="{StaticResource ButtonStyle}"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="0,0,5,0"
                                                    Tag="{Binding IdUser}"
                                                    Click="ToggleStatusButton_Click"
                                                    ToolTip="{Binding AccountStatusButtonTooltip}">
                                                <materialDesign:PackIcon Kind="{Binding AccountStatusIcon}" 
                                                                      Width="16" 
                                                                      Height="16" 
                                                                      Foreground="White"/>
                                            </Button>
                                            <Button x:Name="DeleteButton"
                                                    Style="{StaticResource ButtonStyle}"
                                                    Width="30"
                                                    Height="30"
                                                    Tag="{Binding IdUser}"
                                                    Click="DeleteButton_Click"
                                                    ToolTip="Удалить">
                                                <materialDesign:PackIcon Kind="Delete" 
                                                                      Width="16" 
                                                                      Height="16" 
                                                                      Foreground="White"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
        </Border>
        <Rectangle x:Name="SupRect" 
               Grid.Row="0" Grid.RowSpan="2"
               Fill="#5A5A42" 
               Opacity="0.6" 
               Visibility="Collapsed"/>

        <Rectangle x:Name="FullScreenPhoto" 
               Grid.Row="0" Grid.RowSpan="2"
               Visibility="Collapsed" 
               Width="500" 
               Height="500" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>

        <Button x:Name="PhotoBackButton" 
            Grid.Row="0" Grid.RowSpan="2"
            Style="{StaticResource ExitAndSettingsButtonStyle}" 
            Visibility="Collapsed"
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom"
            Width="100" 
            Height="104" 
            Margin="25"
            Click="PhotoBackButton_Click">
            <materialDesign:PackIcon Kind="ArrowLeftBold" 
                              Foreground="#F0FFF0"
                              Width="60"
                              Height="60"/>
        </Button>
    </Grid>
</Page>