<Page x:Class="course_project_tourist_routes.AdminPages.OpenRoutePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:course_project_tourist_routes.AdminPages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="Просмотр маршрута">
    <Grid>
        <Border Background="#D1E2C4" CornerRadius="10" Margin="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#4A773C" CornerRadius="10" Margin="10,10,10,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BackButton" 
                                Style="{StaticResource ExitAndSettingsButtonStyle}" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Width="60"
                                Height="60" 
                                IsCancel="True"
                                Click="BackButton_Click">
                            <materialDesign:PackIcon Kind="ArrowLeftBold" 
                                                  Foreground="#F0FFF0"
                                                  Width="40"
                                                  Height="40"/>
                        </Button>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="MapCheck" 
                                                   Foreground="#F0FFF0" 
                                                   Width="32"
                                                   Height="37"
                                                   Margin="0,0,10,0"/>
                            <TextBlock x:Name="RouteTitleText" 
                                       Foreground="#F0FFF0" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="600"/>
                        </StackPanel>

                        <Button x:Name="FavoriteButton"
                                Grid.Column="2"
                                Style="{StaticResource ExitAndSettingsButtonStyle}"
                                Width="60"
                                Height="60"
                                Visibility="Collapsed"
                                Click="FavoriteButton_Click">
                            <materialDesign:PackIcon x:Name="FavoriteIcon" 
                                                  Kind="StarOutline" 
                                                  Foreground="#F0FFF0"
                                                  Width="40"
                                                  Height="40"/>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border Background="#F0FFF0" CornerRadius="10" Margin="0,0,0,10" Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Border Background="#4A773C" CornerRadius="5" Padding="5,3,5,3">
                                        <TextBlock x:Name="CategoryText" 
                                                   Foreground="#F0FFF0" 
                                                   FontWeight="Bold"
                                                   Margin="5,0"
                                                   FontSize="16" />
                                    </Border>

                                    <Border x:Name="AuthorBorder" 
                                            Background="#4A773C" 
                                            CornerRadius="5" 
                                            Padding="5,3,5,3"
                                            Margin="10,0,0,0"
                                            Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Account" 
                                                                   Foreground="#F0FFF0"
                                                                   Width="16"
                                                                   Height="21"
                                                                   Margin="0,0,5,0"/>
                                            <TextBlock x:Name="AuthorText" 
                                                       Foreground="#F0FFF0" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                        <materialDesign:PackIcon Kind="Eye" 
                                       Foreground="#4A773C"
                                       Width="20"
                                       Height="27"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"                          
                                       Margin="0,0,2,0"/>
                                        <TextBlock x:Name="ViewsText"
                                                   Foreground="#4A773C"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Text="0"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center" Height="24"/>
                                    </StackPanel>
                                </StackPanel>

                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                                        <materialDesign:PackIcon Kind="MapMarkerDistance" 
                                                               Foreground="#4A773C"
                                                               Width="20"
                                                               Height="20"
                                                               Margin="0,0,5,0"/>
                                        <TextBlock x:Name="LengthText"
                                                   Foreground="#4A773C"
                                                   FontWeight="SemiBold"
                                                   FontSize="16"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="10,0,0,0">
                                        <materialDesign:PackIcon Kind="Walk" 
                                                               Foreground="#4A773C"
                                                               Width="20"
                                                               Height="20"
                                                               Margin="0,0,5,0"/>
                                        <TextBlock x:Name="StepsText"
                                                   Foreground="#4A773C"
                                                   FontWeight="SemiBold"
                                                   FontSize="16"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="#F0FFF0" CornerRadius="10" Margin="0,0,0,10" Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="Text" 
                                                            Foreground="#4A773C"
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,5,0"/>
                                    <TextBlock Text="Описание маршрута:" 
                                               FontSize="16" 
                                               Foreground="#4A773C"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="DescriptionText" 
                                               TextWrapping="Wrap" 
                                               FontSize="14"
                                               Foreground="#4A773C"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <Border Background="#F0FFF0" CornerRadius="10" Margin="0,0,0,10" Padding="5">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="MapMarkerMultiple" 
                                                            Foreground="#4A773C"
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,5,0"/>
                                    <TextBlock Text="Точки маршрута:" 
                                               FontSize="16" 
                                               Foreground="#4A773C"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <ListView x:Name="PointsListView"
                                          Style="{StaticResource NonSelectableListViewStyle}"
                                          MaxHeight="300"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          BorderThickness="0"
                                          Background="Transparent">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource RoutePointCardStyle}">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding PointName}" 
                                                               FontWeight="Bold"
                                                               Foreground="#4A773C"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <materialDesign:PackIcon Kind="Tag" 
                                                                               Foreground="#4A773C"
                                                                               Width="16"
                                                                               Height="16"
                                                                               Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding PointTypes.NameType}" 
                                                                   Foreground="#4A773C"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <materialDesign:PackIcon Kind="Earth" 
                                                                                 Foreground="#4A773C"
                                                                                 Width="16"
                                                                                 Height="16"
                                                                                 Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding Country}" 
                                                                   Foreground="#4A773C"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <materialDesign:PackIcon Kind="City" 
                                                                               Foreground="#4A773C"
                                                                               Width="16"
                                                                               Height="16"
                                                                               Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding City}" 
                                                                   Foreground="#4A773C"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>

                        <Border Background="#F0FFF0" CornerRadius="10" Padding="10">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="ImageMultiple" 
                                                            Foreground="#4A773C"
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0,0,5,0"/>
                                    <TextBlock Text="Фотографии:" 
                                               FontSize="16" 
                                               Foreground="#4A773C"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Grid Width="100" Height="100" Margin="5">
                                        <ProgressBar x:Name="Photo1Progress" 
                                                   Style="{StaticResource RotatingProgressStyle}"
                                                   Minimum="0" Maximum="100"
                                                   Value="0"
                                                   Visibility="Collapsed"
                                                   IsIndeterminate="True"/>
                                        <Button x:Name="Photo1Button" 
                                               Width="100" Height="100" 
                                               Style="{StaticResource PhotoButtonStyle}"
                                               Content="{DynamicResource photo1image}" 
                                               Background="Transparent" 
                                               BorderBrush="Transparent"
                                               BorderThickness="0"
                                               Click="PhotoButton_Click"
                                               Visibility="Collapsed"/>
                                    </Grid>

                                    <Grid Width="100" Height="100" Margin="5">
                                        <ProgressBar x:Name="Photo2Progress" 
                                                   Style="{StaticResource RotatingProgressStyle}"
                                                   Minimum="0" Maximum="100"
                                                   Value="0"
                                                   Visibility="Collapsed"
                                                   IsIndeterminate="True"/>
                                        <Button x:Name="Photo2Button" 
                                               Width="100" Height="100" 
                                               Style="{StaticResource PhotoButtonStyle}"
                                               Content="{DynamicResource photo2image}" 
                                               Background="Transparent" 
                                               BorderBrush="Transparent"
                                               BorderThickness="0"
                                               Click="PhotoButton_Click"
                                               Visibility="Collapsed"/>
                                    </Grid>

                                    <Grid Width="100" Height="100" Margin="5">
                                        <ProgressBar x:Name="Photo3Progress" 
                                                   Style="{StaticResource RotatingProgressStyle}"
                                                   Minimum="0" Maximum="100"
                                                   Value="0"
                                                   Visibility="Collapsed"
                                                   IsIndeterminate="True"/>
                                        <Button x:Name="Photo3Button" 
                                               Width="100" Height="100" 
                                               Style="{StaticResource PhotoButtonStyle}"
                                               Content="{DynamicResource photo3image}" 
                                               Background="Transparent" 
                                               BorderBrush="Transparent"
                                               BorderThickness="0"
                                               Click="PhotoButton_Click"
                                               Visibility="Collapsed"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <Rectangle x:Name="SupRect" 
                           Grid.Row="0" Grid.RowSpan="2"
                           Fill="#5A5A42" 
                           Opacity="0.7" 
                           Visibility="Collapsed"/>

                <Grid x:Name="FullScreenPhotoGrid" 
                      Grid.Row="0" Grid.RowSpan="2"
                      Visibility="Collapsed">
                    <Rectangle x:Name="FullScreenPhoto" 
                               Fill="{StaticResource DefaultImageBrush}"
                               Width="700" 
                               Height="700"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                    
                    <Button x:Name="ClosePhotoButton"
                            Style="{StaticResource HoverButtonStyle}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,25,25,20"
                            Width="80"
                            IsCancel="True"
                            Height="60"
                            Click="ClosePhotoButton_Click">
                        <materialDesign:PackIcon Kind="Close" 
                                              Foreground="#F0FFF0"
                                              Width="30"
                                              Height="30"/>
                    </Button>
                    
                    <Button x:Name="PrevPhotoButton"
                            Style="{StaticResource HoverButtonStyle}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="20"
                            Width="80"
                            Height="60"
                            Click="PrevPhotoButton_Click"
                            Visibility="Collapsed">
                        <materialDesign:PackIcon Kind="ChevronLeft" 
                                              Foreground="#F0FFF0"
                                              Width="40"
                                              Height="40"/>
                    </Button>
                    
                    <Button x:Name="NextPhotoButton"
                            Style="{StaticResource HoverButtonStyle}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="20"
                            Width="80"
                            Height="60"
                            Click="NextPhotoButton_Click"
                            Visibility="Collapsed">
                        <materialDesign:PackIcon Kind="ChevronRight" 
                                              Foreground="#F0FFF0"
                                              Width="40"
                                              Height="40"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>