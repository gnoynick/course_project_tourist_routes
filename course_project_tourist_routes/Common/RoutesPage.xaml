<Page x:Class="course_project_tourist_routes.Common.RoutesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:course_project_tourist_routes.Common"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1300"
      Title="Маршруты"
      IsVisibleChanged="RoutesPage_IsVisibleChanged">
    <Grid>
        <Border Background="#D1E2C4" CornerRadius="10" Margin="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#4A773C" CornerRadius="10" Margin="10,10,10,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BackButton" 
                                Style="{StaticResource ExitAndSettingsButtonStyle}" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Width="60"
                                Height="60" 
                                IsCancel="True"
                                Click="BackButton_Click">
                            <materialDesign:PackIcon Kind="ArrowLeftBold" 
                                                  Foreground="#F0FFF0"
                                                  Width="40"
                                                  Height="40"/>
                        </Button>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="MapSearch" 
                                                   Foreground="#F0FFF0" 
                                                   Width="32"
                                                   Height="37"
                                                   Margin="0,0,10,0"/>
                            <TextBlock Text="Поиск маршрута" 
                                       Foreground="#F0FFF0" 
                                       FontSize="28" 
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" CornerRadius="10" Margin="10,10,10,0" Padding="10">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" 
                                                         Foreground="#4A773C"
                                                         Width="24"
                                                         Height="24"
                                                         Margin="0,0,5,0"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Поиск"
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#4A773C"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                            </StackPanel>
                            <TextBox x:Name="SearchTextBox" 
                                     Width="250"
                                     TextAlignment="Left"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource StyledTextBox}"
                                     Margin="0,5,10,0"
                                     Tag="Поиск по названию..."
                                     TextChanged="SearchTextBox_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                            <Grid>
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                                <materialDesign:PackIcon Kind="Magnify" 
                                                                                       HorizontalAlignment="Left" 
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="10,0,0,0"
                                                                                       Foreground="#4A773C"/>
                                                            </Grid>
                                                        </Border>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <ComboBox x:Name="CategoryComboBox"
                                  Style="{StaticResource StyledComboBox}"
                                  Width="200"
                                  Margin="0,5,10,0"
                                  SelectionChanged="CategoryComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Tag" 
                                                   Width="20"
                                                   Height="20"
                                                   Margin="0,0,5,0"
                                                   Foreground="#4A773C"/>
                                            <TextBlock Text="{Binding NameCategory}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <ComboBox x:Name="CountryComboBox"
                                  Style="{StaticResource StyledComboBox}"
                                  Width="200"
                                  Margin="0,5,10,0"
                                  SelectionChanged="CountryComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Earth" 
                                                   Width="20"
                                                   Height="20"
                                                   Margin="0,0,5,0"
                                                   Foreground="#4A773C"/>
                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <ComboBox x:Name="CityComboBox"
                                  Style="{StaticResource StyledComboBox}"
                                  Width="200"
                                  Margin="0,5,10,0"
                                  SelectionChanged="CityComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="City" 
                                                   Width="20"
                                                   Height="20"
                                                   Margin="0,0,5,0"
                                                   Foreground="#4A773C"/>
                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button x:Name="ResetFiltersButton"
                                    Style="{StaticResource HoverButtonStyle}"
                                    Width="40"
                                    Height="40"
                                    Margin="0,5,0,0"
                                    Click="ResetFiltersButton_Click"
                                    ToolTip="Сбросить фильтры">
                                <materialDesign:PackIcon Kind="FilterRemove" 
                                                      Width="20" 
                                                      Height="20" 
                                                      Foreground="White"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" CornerRadius="10" Background="White" Margin="10" Padding="10">
                    <ListView x:Name="RoutesListView" 
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.IsDeferredScrollingEnabled="False"
                              Style="{StaticResource ListViewStyle}"
                              ItemContainerStyle="{StaticResource ListViewItemStyle}"
                              BorderThickness="0"
                              SelectionChanged="RoutesListView_SelectionChanged" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource RouteCardStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="5">
                                            <TextBlock Text="{Binding TitleRoute}" 
                                                   FontSize="14" 
                                                   FontWeight="Bold" 
                                                   Style="{StaticResource RouteTextStyle}"/>
                                            <TextBlock Text="{Binding DescriptionRoute}" 
                                                   Style="{StaticResource RouteTextStyle}" 
                                                   TextWrapping="Wrap"
                                                   MaxHeight="60"
                                                   TextTrimming="CharacterEllipsis"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <materialDesign:PackIcon Kind="Eye" 
                                 Width="12"
                                 Height="12"
                                 Margin="0,0,3,0"
                                 Foreground="#8B7962"/>
                                                <TextBlock Text="{Binding ViewsCount}" 
                   FontStyle="Italic" 
                   FontSize="11"
                   Foreground="#8B7962"/>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <materialDesign:PackIcon Kind="Tag" 
                                                                         Width="12"
                                                                         Height="12"
                                                                         Margin="0,0,3,0"
                                                                         Foreground="#8B7962"/>
                                                <TextBlock Text="{Binding CategoryName}" 
                                                       FontStyle="Italic" 
                                                       FontSize="11"
                                                       Foreground="#8B7962"/>
                                                <TextBlock Text="{Binding AuthorInfo}" 
                                                       FontStyle="Italic" 
                                                       FontSize="11"
                                                       Foreground="#8B7962"
                                                       Margin="10,0,0,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <materialDesign:PackIcon Kind="Earth" 
                                                                         Width="12"
                                                                         Height="12"
                                                                         Margin="0,0,3,0"
                                                                         Foreground="#8B7962"/>
                                                <TextBlock Text="{Binding Countries}" 
                                                       FontStyle="Italic" 
                                                       FontSize="11"
                                                       Foreground="#8B7962"/>
                                                <materialDesign:PackIcon Kind="City" 
                                                                         Width="12"
                                                                         Height="12"
                                                                         Margin="10,0,3,0"
                                                                         Foreground="#8B7962"/>
                                                <TextBlock Text="{Binding Cities}" 
                                                       FontStyle="Italic" 
                                                       FontSize="11"
                                                       Foreground="#8B7962"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" 
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Center" 
                                                Margin="5">
                                            <Button x:Name="EditButton"
                                                Style="{StaticResource HoverButtonStyle}"
                                                Width="40"
                                                Height="30"
                                                Margin="0,0,10,0"
                                                Tag="{Binding IdRoute}"
                                                Click="EditRouteButton_Click"
                                                Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                ToolTip="Редактировать">
                                                <materialDesign:PackIcon Kind="Pencil" 
                                                                  Width="16" 
                                                                  Height="16" 
                                                                  Foreground="White"/>
                                            </Button>
                                            <Button x:Name="DeleteButton"
                                                Style="{StaticResource HoverButtonStyle}"
                                                Width="40"
                                                Height="30"
                                                Tag="{Binding IdRoute}"
                                                Click="DeleteRouteButton_Click"
                                                Visibility="{Binding CanDelete, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                ToolTip="Удалить">
                                                <materialDesign:PackIcon Kind="Delete" 
                                                                  Width="16" 
                                                                  Height="16" 
                                                                  Foreground="White"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>