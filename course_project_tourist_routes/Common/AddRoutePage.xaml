<Page x:Class="course_project_tourist_routes.Common.AddRoutePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1000"
      Title="Добавление маршрута">
    <Border Background="#D1E2C4" CornerRadius="10" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#4A773C" CornerRadius="10" Margin="10,10,10,5" Padding="15">
                <Grid>
                    <Button x:Name="BackButton"
                            Style="{StaticResource ExitAndSettingsButtonStyle}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Width="60"
                            Height="60"
                            IsCancel="True"
                            Click="BackButton_Click">
                        <materialDesign:PackIcon Kind="ArrowLeftBold" Foreground="#F0FFF0" Width="40" Height="40"/>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="MapPlus" 
                                               Foreground="White" 
                                               Width="36" 
                                               Height="36"
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="Добавление маршрута"
                                   Foreground="#F0FFF0"
                                   FontSize="28"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel>
                    <StackPanel Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Label" 
                                                   Foreground="#4A773C" 
                                                   Width="24" 
                                                   Height="24"
                                                   Margin="0,0,5,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Категория маршрута:"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4A773C"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <ComboBox x:Name="CategoryComboBox"
                                  Style="{StaticResource StyledComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Tag" 
                                               Width="20"
                                               Height="20"
                                               Margin="0,0,5,0"
                                               Foreground="#4A773C"/>
                                        <TextBlock Text="{Binding NameCategory}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <materialDesign:PackIcon Kind="FormatTitle" 
                                                   Foreground="#4A773C" 
                                                   Width="24" 
                                                   Height="24"
                                                   Margin="0,0,5,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Название маршрута:"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4A773C"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBox x:Name="TitleTextBox"
                                 Style="{StaticResource StyledTextBox}"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <materialDesign:PackIcon Kind="MapMarkerDistance" 
                                                       Foreground="#4A773C" 
                                                       Width="24" 
                                                       Height="24"
                                                       Margin="0,0,5,0"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Протяженность (км):"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#4A773C"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBox x:Name="LengthTextBox"
                                     Style="{StaticResource StyledTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <materialDesign:PackIcon Kind="Walk" 
                                                       Foreground="#4A773C" 
                                                       Width="24" 
                                                       Height="24"
                                                       Margin="0,0,5,0"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Количество шагов:"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#4A773C"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBox x:Name="StepsCountTextBox"
                                     Style="{StaticResource StyledTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <materialDesign:PackIcon Kind="MapMarkerMultiple" 
                                                   Foreground="#4A773C" 
                                                   Width="24" 
                                                   Height="24"
                                                   Margin="0,0,5,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Точки маршрута:"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4A773C"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Style="{StaticResource HoverButtonStyle}"
                                HorizontalAlignment="Left"
                                Margin="10,0,0,10"
                                Width="160"
                                Height="30"
                                Click="AddPointButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" 
                                                       Width="20"
                                                       Height="20"
                                                       Margin="0,0,5,0"
                                                       Foreground="White"/>
                                <TextBlock Text="Добавить точку"/>
                            </StackPanel>
                        </Button>

                        <DataGrid x:Name="PointsDataGrid" 
                                  Style="{StaticResource RoutePointsDataGridStyle}"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название" Binding="{Binding PointName}" Width="2*">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="FormatTitle"  
                                                                       Width="16"
                                                                       Height="20"
                                                                       Margin="0,0,5,0"
                                                                       Foreground="#4A773C"/>
                                                <TextBlock Text="Название"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Тип" Binding="{Binding PointTypes.NameType}" Width="1.5*">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Tag" 
                                                                       Width="16"
                                                                       Height="20"
                                                                       Margin="0,0,5,0"
                                                                       Foreground="#4A773C"/>
                                                <TextBlock Text="Тип"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="1*">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Earth" 
                                                                       Width="16"
                                                                       Height="20"
                                                                       Margin="0,0,5,0"
                                                                       Foreground="#4A773C"/>
                                                <TextBlock Text="Страна"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Город" Binding="{Binding City}" Width="1*">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="City" 
                                                                       Width="16"
                                                                       Height="20"
                                                                       Margin="0,0,5,0"
                                                                       Foreground="#4A773C"/>
                                                <TextBlock Text="Город"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Действия" Width="1*">
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Settings" 
                                                                       Width="16"
                                                                       Height="20"
                                                                       Margin="0,0,5,0"
                                                                       Foreground="#4A773C"/>
                                                <TextBlock Text="Действия"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource DangerButtonStyle}" 
                                                    Padding="5"
                                                    Click="RemovePointButton_Click">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Delete" 
                                                                           Width="16"
                                                                           Height="16"
                                                                           Margin="0,0,5,0"
                                                                           Foreground="White"/>
                                                    <TextBlock Text="Удалить"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Style="{StaticResource HoverButtonStyle}"
                                HorizontalAlignment="Right"
                                Margin="0,10,10,0"
                                Width="160"
                                Height="30"
                                Click="ClearPointsButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Broom" 
                                                       Width="20"
                                                       Height="20"
                                                       Margin="0,0,5,0"
                                                       Foreground="White"/>
                                <TextBlock Text="Очистить список"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <StackPanel Margin="0,15,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <materialDesign:PackIcon Kind="Text" 
                                                   Foreground="#4A773C" 
                                                   Width="24" 
                                                   Height="24"
                                                   Margin="0,0,5,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Описание маршрута:"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4A773C"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBox x:Name="DescriptionTextBox"
                                 Style="{StaticResource StyledTextBox}"
                                 Height="100"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Margin="0,15,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <materialDesign:PackIcon Kind="ImageMultiple" 
                                                   Foreground="#4A773C" 
                                                   Width="24" 
                                                   Height="24"
                                                   Margin="0,0,5,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Фотографии маршрута:"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4A773C"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Grid Width="100" Height="100" Margin="5">
                                <ProgressBar x:Name="Photo1Progress" 
                                             Style="{StaticResource RotatingProgressStyle}"
                                             Visibility="Collapsed"
                                             IsIndeterminate="True"/>
                                <Button x:Name="Photo1Button" 
                                        Width="100" Height="100" 
                                        Style="{StaticResource PhotoButtonStyle}"
                                        Content="{DynamicResource photo1image}" 
                                        Background="Transparent" 
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        Click="PhotoButton_Click"
                                        Visibility="Collapsed"/>
                                <Button x:Name="RemovePhoto1Button"
                                        Style="{StaticResource DangerButtonStyle}"
                                        Width="20" Height="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,5,5,0"
                                        Padding="0"
                                        Click="RemovePhotoButton_Click"
                                        Visibility="Collapsed">
                                    <materialDesign:PackIcon Kind="Close" Width="12" Height="12" Foreground="White"/>
                                </Button>
                            </Grid>

                            <Grid Width="100" Height="100" Margin="5">
                                <ProgressBar x:Name="Photo2Progress" 
                                             Style="{StaticResource RotatingProgressStyle}"
                                             Visibility="Collapsed"
                                             IsIndeterminate="True"/>
                                <Button x:Name="Photo2Button" 
                                        Width="100" Height="100"
                                        Style="{StaticResource PhotoButtonStyle}"
                                        Content="{DynamicResource photo2image}" 
                                        Background="Transparent" 
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        Click="PhotoButton_Click"
                                        Visibility="Collapsed"/>
                                <Button x:Name="RemovePhoto2Button"
                                        Style="{StaticResource DangerButtonStyle}"
                                        Width="20" Height="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,5,5,0"
                                        Padding="0"
                                        Click="RemovePhotoButton_Click"
                                        Visibility="Collapsed">
                                    <materialDesign:PackIcon Kind="Close" Width="12" Height="12" Foreground="White"/>
                                </Button>
                            </Grid>

                            <Grid Width="100" Height="100" Margin="5">
                                <ProgressBar x:Name="Photo3Progress" 
                                             Style="{StaticResource RotatingProgressStyle}"
                                             Visibility="Collapsed"
                                             IsIndeterminate="True"/>
                                <Button x:Name="Photo3Button" 
                                        Width="100" Height="100" 
                                        Style="{StaticResource PhotoButtonStyle}"
                                        Content="{DynamicResource photo3image}" 
                                        Background="Transparent" 
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        Click="PhotoButton_Click"
                                        Visibility="Collapsed"/>
                                <Button x:Name="RemovePhoto3Button"
                                        Style="{StaticResource DangerButtonStyle}"
                                        Width="20" Height="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,5,5,0"
                                        Padding="0"
                                        Click="RemovePhotoButton_Click"
                                        Visibility="Collapsed">
                                    <materialDesign:PackIcon Kind="Close" Width="12" Height="12" Foreground="White"/>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="AddPhoto1Button" 
                                    Style="{StaticResource HoverButtonStyle}"
                                    Width="120"
                                    Margin="0,0,10,0"
                                    Click="AddPhotoButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ImagePlus" 
                                                           Width="20"
                                                           Height="20"
                                                           Margin="0,0,5,0"
                                                           Foreground="White"/>
                                    <TextBlock Text="Фото 1"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="AddPhoto2Button" 
                                    Style="{StaticResource HoverButtonStyle}"
                                    Width="120"
                                    Margin="0,0,10,0"
                                    Click="AddPhotoButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ImagePlus" 
                                                           Width="20"
                                                           Height="20"
                                                           Margin="0,0,5,0"
                                                           Foreground="White"/>
                                    <TextBlock Text="Фото 2"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="AddPhoto3Button" 
                                    Style="{StaticResource HoverButtonStyle}"
                                    Width="120"
                                    Click="AddPhotoButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ImagePlus" 
                                                           Width="20"
                                                           Height="20"
                                                           Margin="0,0,5,0"
                                                           Foreground="White"/>
                                    <TextBlock Text="Фото 3"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <StackPanel x:Name="SavingProgressPanel"  Orientation="Vertical"  HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,0,0,10">
                    <TextBlock Text="Идёт сохранение маршрута..." 
                               Foreground="#4A773C"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <ProgressBar Width="200" 
                                 Height="6"
                                 IsIndeterminate="True"
                                 Foreground="#4A773C"
                                 Margin="0,5,0,0"/>
                </StackPanel>
                <Button x:Name="SaveButton" 
                    Style="{StaticResource HoverButtonStyle}"
                        Margin="0,0,0,10"
                        Width="250"
                        Height="30"
                        IsDefault="True"
                        Click="SaveButton_Click">
                    
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" 
                                               Width="20"
                                               Height="20"
                                               Margin="0,0,5,0"
                                               Foreground="White"/>
                        <TextBlock Text="Сохранить"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <Rectangle x:Name="SupRect" 
                       Grid.Row="0" Grid.RowSpan="3"
                       Fill="#5A5A42" 
                       Opacity="0.6" 
                       Visibility="Collapsed"/>

            <Rectangle x:Name="FullScreenPhoto" 
                       Grid.Row="0" Grid.RowSpan="3"
                       Visibility="Collapsed" 
                       Width="700" 
                       Height="700" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>

            <Button x:Name="PhotoBackButton" 
                    Grid.Row="0" Grid.RowSpan="3"
                    Style="{StaticResource HoverButtonStyle}" 
                    Visibility="Collapsed"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom"
                    Width="100" 
                    Height="104" 
                    Margin="25"
                    Click="PhotoBackButton_Click">
                <materialDesign:PackIcon Kind="ArrowLeftBold" 
                                  Foreground="#F0FFF0"
                                  Width="60"
                                  Height="60"/>
            </Button>
        </Grid>
    </Border>
</Page>